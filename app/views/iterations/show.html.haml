= render partial: "stories/sub_menu", locals: {project: @project}

%h1
  Iteration:
  - if @iteration
    = @iteration.name
    - if @iteration == @project.iterations.current
      (current)
    - stories = @iteration.stories
  - else
    Icebox
    - stories = @project.stories.icebox

= render partial: "projects/story_list", locals: {iteration: @iteration, stories: stories, list_type: "iteration_ul", move: 0}