%ul.criteria-comments-list{id: "criterium_comments_list_" + criterium.id.to_s}
  - criterium.comments.each do |comment|
    = render partial: "comments/comment_detail", locals: {comment: comment}

- comment = Comment.new(criterium_id: criterium.id)
= form_for(comment, remote: true, html: {class: "pure-form"}) do |f|
  = f.text_field :message, class: "comment-box pure-input-2-3" 
  = f.hidden_field :criterium_id, value: criterium.id
  %P
  = f.submit "Add Comment", { class: "pure-button-small pure-button-success pure-button", method: "post", remote: true}