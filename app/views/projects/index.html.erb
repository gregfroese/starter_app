<div class="row">
	<div class="large-12 columns">
		<h1>Project list</h1>

    <a class="small button" href="/projects/new">Create project</a>

		<ul class="project-list">
		<% @projects.each do |p| %>
			<li class="project_#{p.id}">
        <h5><%= p.name %></h5>
        <div class="project-details">
          <ul class="project-details-list">
            <li>
              <%= link_to "Manage Stories (#{p.stories.size})", manage_project_path(p) %>
              <br />
              <span class="iteration-story-count iteration-story-count-project-#{p.id}">
                <%= link_to "Current Iteration: #{ p.iterations.last.stories.size }", project_stories_path(p) %>
              </span>
              <span class="iteration-count">(<%= p.iterations.size %> iterations)</span>
            </li>
            <li>
              <span class="story-count">
                Icebox: <%= p.stories.size - p.iterations.last.stories.size %>
              </span>
            </li>
          </ul>
        </div>
      </li>
		<% end %>
		</ul>


	</div>
</div>

