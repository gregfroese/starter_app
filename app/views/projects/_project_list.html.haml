%div.pure-g
  %div.pure-u-1
    %h3 Project list
    %table.pure-table.custom-table
      %thead
        %tr
          %th Name
          %th Manage Stories
          %th Current Iteration
          %th Icebox
          %th Previous Iterations
      %tbody
        - odd = false
        - projects.each do |p|
          - if odd
            - odd = false
            - stripe_class = "pure-table-odd"
          - else
            - odd = true
            - stripe_class = ""

          %tr{class: stripe_class, id: "project_#{p.id}"}
            %td= p.name
            %td= link_to "#{p.stories.size} stories", manage_project_path(p), {class: "pure-button pure-button-success"}
            %td= link_to "#{p.iterations.last.stories.size} stories", project_stories_path(p), {class: "pure-button pure-button-success"}
            %td= link_to "#{p.stories.size - p.iterations.last.stories.size} stories", icebox_project_stories_path(p), {class: "pure-button pure-button-success"}
            %td
              = p.iterations.size - 1
              iterations
