%div.pure-g
  %div.pure-u-1
    %h3= @project.name
%div.pure-g
  %div.pure-u-1

    %h5 CURRENT ITERATION
    = link_to 'New story in iteration', new_project_story_path(@project, {iteration_id: @project.iterations.last.id}), { class: "small button"}
    = link_to 'Resort by priority', resetsortorder_project_path(@project, iteration_id: @project.iterations.last.id, redirect: project_path(@project)), { class: "small button", method: "post"}

    %div.story-container
      = render partial: "story_list", locals: { stories: @iteration, list_type: "iteration_ul", move: 0 }
