%div.pure-g-r
  %div.pure-u-1
    %h3= @project.name
%div.pure-g-r
  %div.pure-u-1

    %h5 CURRENT ITERATION
    = link_to 'New Story', new_project_story_path(@project), { class: "pure-button pure-button-success"}
    = link_to 'Resort by priority', resetsortorder_project_path(@project, iteration_id: @project.iterations.current.id, redirect: project_path(@project)), { class: "pure-button pure-button-secondary", method: "post"}

    %div.story-container
      = render partial: "story_list", locals: { iteration: @project.iterations.current, stories: @iteration, list_type: "iteration_ul", move: 0 }
